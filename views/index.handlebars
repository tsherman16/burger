<div class="row">
    <div class="col">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcREW2q9s-KQvhSEWCvrMRZk1GW2arPVwT0jdWP33lpkIxAnMBBTtQ" alt="burger">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div id="avail-style">
            <h2 id="myBurgers">Available Burgers!</h2>

            <ul id="myBurgers">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-6">
        <div id="devour-style">
            <h2 id="eatenBurgers">Burgers DEVOURED!</h2>

            <ul id="eatenBurgers">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <button type="submit" class="btn btn-success btn-lg creatNew">Add Burger</button>
            <p> Enter a burger you want to eat and click the Add Burger button.</p>
        </form>
    </div>
</div>