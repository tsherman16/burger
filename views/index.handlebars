<div class="row">
    <div class="col">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcREW2q9s-KQvhSEWCvrMRZk1GW2arPVwT0jdWP33lpkIxAnMBBTtQ" alt="burger">
        <h1>Eat-Da-Burger!</h1>
    </div>
</div>

<div class="row">
    <div class="col-6">
        <div id="avail-style">
            <h2>Available Burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-6">
        <div id="devour-style">
            <h2>Burgers that have been DEVOURED!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>